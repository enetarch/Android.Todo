<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="6dip">

	<CheckBox
		android:id="@+id/chkStatus"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:text=""
		android:gravity="left|start"/>

	<TextView
		android:id="@+id/lblMemo"
		android:layout_toRightOf="@+id/chkStatus"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="match_parent"
		android:text="Default Text"
		/>

	<TextView
		android:id="@+id/lblPriority"
		android:layout_toRightOf="@+id/chkStatus"
		android:layout_below="@+id/lblMemo"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_marginRight="6dip"
		android:text="1"
		/>

	<TextView
		android:id="@+id/lblTaskType"
		android:layout_toRightOf="@+id/lblPriority"
		android:layout_below="@+id/lblMemo"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_marginRight="6dip"
		android:text="Get"
		/>

	<TextView
		android:id="@+id/lblTime"
		android:layout_toRightOf="@+id/lblTaskType"
		android:layout_below="@+id/lblMemo"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_marginRight="6dip"
		android:text="0"
		/>

</RelativeLayout>

